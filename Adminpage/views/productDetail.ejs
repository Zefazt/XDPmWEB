<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Quản lý sản phẩm</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="#">Quản lý sản phẩm</a></li>
                            <li class="active">Chi tiết sản phẩm</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="animated fadeIn">
        <div class="row">

        <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong>Chi tiết sản phẩm</strong>
                    </div>
                    <div class="card-body card-block">
                        <div class="row form-group">
                            <div class="col col-md-3"><img src="uploads/<%=productDetail.hinhanh %>"></div>
                        </div>
                            <div class="row form-group">
                                <div class="col col-md-2 font-weight-bold">Mã sản phẩm</div>
                                <div class="col-12 col-md-9"><%= productDetail.Masp %></div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-2 font-weight-bold">Tên sản phẩm</div>
                                <div class="col-12 col-md-9"><%= productDetail.Tensp %></div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-2 font-weight-bold">Danh mục sản phẩm</div>
                                <div class="col-12 col-md-9"><%= productDetail.Madm %></div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-2 font-weight-bold">Năm sản xuất</div>
                                <div class="col-12 col-md-9"><%= productDetail.Namsx %></div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-2 font-weight-bold">Tình trạng</div>
                                <div class="col-12 col-md-9"><%= productDetail.Tinhtrang %></div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-2 font-weight-bold">Hãng sản xuất</div>
                                <div class="col-12 col-md-9"><%= productDetail.Hangsx %></div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-2 font-weight-bold">Size</div>
                                <div class="col-12 col-md-9"><%= productDetail.Size %></div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-2 font-weight-bold">Đơn giá</div>
                                <div class="col-12 col-md-9"><%= productDetail.Dongia %></div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-2 font-weight-bold">Số lượng</div>
                                <div class="col-12 col-md-9"><%= productDetail.Soluong %></div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-2 font-weight-bold">Nội dung</div>
                                <div class="col-12 col-md-9"><%= productDetail.mota %></div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- .animated -->
</div><!-- .content -->