<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Quản lý danh mục sản phẩm</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="#">Quản lý danh mục sản phẩm</a></li>
                            <li class="active">Hiển thị</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Danh mục sản phẩm</strong>&nbsp;
                    </div>
                    <div class="card-body">
                    <a href="/categoryAdd"><button type="button" class="btn btn-primary btn-sm" style="float: right;">Thêm</button></a>
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Mã danh mục</th>
                                    <th>Tên danh mục</th>
                                    <th>Chi tiết danh mục</th>
                                    <th>Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                
                                <% for(let i=0; i < dataCategory.length; i++) { %>
                                    <tr>
                                      <td><%= dataCategory[i].Madm %></td>
                                      <td><%= dataCategory[i].Tendm %></td>
                                      <td><a href="/categoryDetails?id=<%=dataCategory[i].Madm%>"><button type="button" class="btn btn-link">Xem</button></a></td>
                                      <td><a href="/categoryEdit?id=<%=dataCategory[i].Madm%>"><button type="button" class="btn btn-secondary btn-sm">Sửa</button></a>
                                        <a href="/categoryDelete?id=<%=dataCategory[i].Madm%>" onClick=" confirm('Bạn có chắc muốn xóa?')"><button type="button" class="btn btn-warning btn-sm">Xóa</button></a>
                                      </td>
                                    </tr>
                                 <% } %>
                            </tbody>

                        </table>

                    </div>

                </div>

            </div>


        </div>

    </div><!-- .animated -->
</div><!-- .content -->