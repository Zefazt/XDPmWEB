<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Quản lý người dùng</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="#">Quản lý người dùng</a></li>
                            <li class="active">Hiển thị</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Người dùng</strong>&nbsp;
                    </div>
                    <div class="card-body">
                    <a href="/userAdd"><button type="button" class="btn btn-primary btn-sm" style="float: right;">Thêm</button></a>
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Mã khách hàng</th>
                                    <th>Tên khách hàng</th>
                                    <th>Số điện thoại</th>
                                    <th>Địa chỉ</th>
                                    <th>Email</th>
                                    <th>Chi tiết </th>
                                    <th>Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(let i=0; i < dataUser.length; i++) { %>
                                    <tr>
                                      <td><%= dataUser[i].Makh %></td>
                                      <td><%= dataUser[i].Tenkh %></td>
                                      <td><%= dataUser[i].Sdt %></td>
                                      <td><%= dataUser[i].Diachi %></td>
                                      <td><%= dataUser[i].Email %></td>
                                      <td><a href="/userDetails?id=<%= dataUser[i].Makh %>"><button type="button" class="btn btn-link">Xem</button></a></td>
                                      <td><a href="/userEdit?id=<%= dataUser[i].Makh %>"><button type="button" class="btn btn-secondary btn-sm">Sửa</button></a>
                                        <a href="/userDelete?id=<%= dataUser[i].Makh %>" onClick=" confirm('Bạn có chắc muốn xóa?')"><button type="button" class="btn btn-warning btn-sm">Xoá</button>
                                      </td>
                                    </tr>
                                 <% } %>
                                

                            </tbody>

                        </table>

                    </div>

                </div>

            </div>


        </div>

    </div><!-- .animated -->
</div><!-- .content -->