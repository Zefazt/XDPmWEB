<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Quản lý đơn hàng</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="#">Quản lý đơn hàng</a></li>
                            <li class="active">Chi tiết</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Đơn Hàng</strong>&nbsp;
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Mã sản phẩm</th>
                                    <th>Số lượng</th>
                                    <th>Đơn giá</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(let i=0; i < dataOrder.length; i++) { %>
                                    <tr>
                                      <td><%= dataOrder[i].Masp %></td>
                                      <td><%= dataOrder[i].Soluong %></td>
                                      <td><%= dataOrder[i].Dongia %></td>
                                      <td><a href="/orderDeleteDetails?Madh=<%=dataOrder[i].Madh%>&Masp=<%= dataOrder[i].Masp %>" onClick=" confirm('Bạn có chắc muốn xóa?')"><button type="button" class="btn btn-warning btn-sm">Xóa</button></a></td>
                                    </tr>
                                 <% } %>
                            </tbody>

                        </table>

                    </div>

                </div>

            </div>


        </div>

    </div><!-- .animated -->
</div><!-- .content -->