<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Quản lý sản phẩm</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="#">Quản lý sản phẩm</a></li>
                            <li class="active">Thêm sản phẩm</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="animated fadeIn">
        <div class="row">

        <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong>Thêm sản phẩm</strong>
                    </div>
                    <div class="card-body card-block">
                        <form action="/productAddSubmit"  method="POST" enctype="multipart/form-data" class="form-horizontal">
            
                            <div class="row form-group">
                                <div class="col col-md-3"><label for="text-input" class=" form-control-label">Mã sản phẩm</label></div>
                                <div class="col-12 col-md-9"><input type="text" id="id_sp" name="id_sp" placeholder="Nhập mã sản phẩm" class="form-control"></div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3"><label for="text-input" class=" form-control-label">Tên sản phẩm</label></div>
                                <div class="col-12 col-md-9"><input type="text" id="ten_sp" name="ten_sp" placeholder="Nhập tên sản phẩm" class="form-control"></div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3"><label class=" form-control-label">Tình trạng</label></div>
                                <div class="col col-md-9">
                                    <div class="form-check">
                                        <div class="radio">
                                            <label for="radio1" >
                                                <input type="radio" id="radio1" name="tinh_trang" value="Còn hàng" checked="checked" class="form-check-input">Còn hàng
                                            </label>
                                        </div>
                                        <div class="radio">
                                            <label for="radio2" class="form-check-label ">
                                                <input type="radio" id="radio2" name="tinh_trang" value="Hết hàng" class="form-check-input">Hết hàng
                                            </label>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3"><label for="select" class=" form-control-label">Chọn danh mục sản phẩm</label></div>
                                <div class="col-12 col-md-9">
                                    <select name="id_dm_sp" id="select-input" class="form-control">
                                        <option value="unselect">Xin chọn thể loại</option>
                                        <% for(let i=0; i < dataProductCategory.length; i++) { %>
                                        <option value="<%= dataProductCategory[i].Madm %>"><%= dataProductCategory[i].Tendm %></option>
                                        <% } %>
                
                                    </select>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3"><label for="number-input" class=" form-control-label">Năm sản xuất</label></div>
                                <div class="col-12 col-md-9"><input type="number" id="nam_sx" name="nam_sx" placeholder="nhập năm sản xuất" class="form-control"></div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3"><label for="text-input" class=" form-control-label">Hãng sản xuất</label></div>
                                <div class="col-12 col-md-9"><input type="text" id="hang_sx" name="hang_sx" placeholder="Nhập hãng sản xuất" class="form-control"></div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3"><label for="text-input" class=" form-control-label">Size </label></div>
                                <div class="col-12 col-md-9"><input type="text" id="size" name="size" placeholder="Nhập size của áo" class="form-control"></div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3"><label for="number-input" class=" form-control-label">Số lượng</label></div>
                                <div class="col-12 col-md-9"><input type="number" id="so_luong" name="so_luong" placeholder="nhập số lượng sản phẩm" class="form-control"></div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3"><label for="number-input" class=" form-control-label">Đơn giá</label></div>
                                <div class="col-12 col-md-9"><input type="number" id="don_gia" name="don_gia" placeholder="nhập đơn giá của sản phẩm" class="form-control"></div>
                            </div>
                            
                            <div class="row form-group">
                                <div class="col col-md-3"><label for="file-input" class=" form-control-label" >Hình ảnh sản phẩm</label></div>
                                <div class="col-12 col-md-9"><input type="file" id="file-input" name="anh_sp" class="form-control-file" multiple></div>
                            </div>
                            
                            <div class="row form-group">
                                <div class="col col-md-3"><label for="file-input" class=" form-control-label" >Mô tả nội dung</label></div>
                                <div class="col-12 col-md-9"><textarea rows="10" cols="83" name="noi_dung"   ></textarea></div>
                            </div>

                            <div  style="float:right;">
                        <button type="submit" class="btn btn-primary " name="submit" value="submit">
                            <i class="fa ti-plus"></i> Thêm sản phẩm
                        </button>
                        <button type="reset" class="btn btn-warning" name="reset" value="reset">
                            <i class="fa ti-reload"></i> Reset
                        </button>
                    </div>
                        </form>
                    </div>
                  
                </div>
           
            </div>



        </div>
    </div><!-- .animated -->
</div><!-- .content -->